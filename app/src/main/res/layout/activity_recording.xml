<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jred.trekr.RecordingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Objects:"
        android:id="@+id/obj_count"
        android:layout_above="@+id/recText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/bn_done"
        android:onClick="doneHandler"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/toggleButton"
        android:layout_alignStart="@+id/obj_count" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:onClick="recToggleHandler"
        android:layout_marginTop="189dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/obj_count"
        android:layout_marginStart="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Recording:"
        android:id="@+id/recText"
        android:layout_marginEnd="39dp"
        android:layout_alignBottom="@+id/toggleButton"
        android:layout_alignEnd="@+id/obj_count"
        android:layout_marginBottom="11dp" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance: 0"
        android:id="@+id/tv_distance"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_name_tf"
        android:layout_below="@+id/bn_done"
        android:layout_alignEnd="@+id/toggleButton"
        android:layout_marginTop="53dp" />

</RelativeLayout>
